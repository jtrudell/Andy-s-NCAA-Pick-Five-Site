<div class="container">
  <div class="headline"></div>
  <div class="row">
    <% if flash[:notice] %>
      <h4 class="error red accent-4"><%= flash[:notice] %></h4>
    <% end %>
    <div class="col s12">
      <ul class="collection with-header">
        <li class="collection-header center orange darken-2">
          <h4>Signup</h4>
        </li>
      </ul>
      <div class="row">
        <h5>Select five teams below, one from each dropdown. Your picks cannot be identical to the picks of anyone who has already signed up.</h5>
      </div>
      <div class="row">
        <div class="input-field col l4 m6 s12">
          <select name="pickone" form="signupform">
            <option value='' class="disabled"></option>
            <% @teams.each do |team| %>
              <option id=<%= team.id %> name=teams[<%= team.name %>] value=<%= team.id %>><%= team.name %> | 2016/17 Wins: <%= @previous_year_teams.find_by(name: team.name).wins || 0 %></option>
            <% end %>
          </select>
          <label>Pick One</label>
        </div>
        <div class="input-field col l4 m6 s12">
          <select name="picktwo" form="signupform">
            <option value='' class="disabled"></option>
            <% @teams.each do |team| %>
              <option id=<%= team.id %> name=teams[<%= team.name %>] value=<%= team.id %>><%= team.name %> | 2016/17 Wins: <%= @previous_year_teams.find_by(name: team.name).wins || 0 %></option>
            <% end %>
          </select>
          <label>Pick Two</label>
        </div>
        <div class="input-field col l4 m6 s12">
          <select name="pickthree" form="signupform">
            <option value='' class="disabled"></option>
            <% @teams.each do |team| %>
              <option id=<%= team.id %> name=teams[<%= team.name %>] value=<%= team.id %>><%= team.name %> | 2016/17 Wins: <%= @previous_year_teams.find_by(name: team.name).wins || 0 %></option>
            <% end %>
          </select>
          <label>Pick Three</label>
        </div>
        <div class="input-field col l4 m6 s12">
          <select name="pickfour" form="signupform">
            <option value='' class="disabled"></option>
            <% @teams.each do |team| %>
              <option id=<%= team.id %> name=teams[<%= team.name %>] value=<%= team.id %>><%= team.name %> | 2016/17 Wins: <%= @previous_year_teams.find_by(name: team.name).wins || 0 %></option>
            <% end %>
          </select>
          <label>Pick Four</label>
        </div>
        <div class="input-field col l4 m6 s12">
          <select name="pickfive" form="signupform">
            <option value='' class="disabled"></option>
            <% @teams.each do |team| %>
              <option id=<%= team.id %> name=teams[<%= team.name %>] value=<%= team.id %>><%= team.name %> | 2016/17 Wins: <%= @previous_year_teams.find_by(name: team.name).wins || 0 %></option>
            <% end %>
          </select>
          <label>Pick Five</label>
        </div>
      </div>
      <div class="row">
        <form class="col s12" action="/picks/2017" id="signupform" method="POST">
          <div class="row">
            <div class="input-field col l5 m6 s12">
              <input placeholder="your first name and first letter of last name" id="name" type="text" class="validate" name="name">
              <label for="name">First Name and Initial:</label>
            </div>
          </div>
          <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
